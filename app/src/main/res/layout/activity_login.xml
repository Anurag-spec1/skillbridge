<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profilebg"
    tools:context=".Login">

    <carbon.widget.TextView
        android:id="@+id/constWlcm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/main_font"
        android:text="Start Your Journey"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <carbon.widget.TextView
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/constWlcm"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:background="#048CA1"
        android:elevation="5dp"
        android:fontFamily="@font/main_font_2"
        android:gravity="center"
        android:padding="12dp"
        android:text="Log in"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:carbon_cornerRadius="10dp" />

    <carbon.widget.TextView
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:background="@color/white"
        android:elevation="5dp"
        android:fontFamily="@font/main_font_2"
        android:gravity="center"
        android:padding="12dp"
        android:text="Sign up"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:carbon_cornerRadius="10dp" />


    <carbon.widget.TextView
        android:id="@+id/constContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSignup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/main_font"
        android:text="Or Continue With"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <carbon.widget.LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/constContinue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <carbon.widget.ImageView
            android:id="@+id/apple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#353333"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/applelogo"
            app:carbon_cornerRadius="25dp" />

        <carbon.widget.ImageView
            android:id="@+id/google"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/googlelogo"
            app:carbon_cornerRadius="25dp" />

        <carbon.widget.ImageView
            android:id="@+id/facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/carbon_blue_a200"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/facebooklogo"
            android:tint="@color/white"
            app:carbon_cornerRadius="25dp" />

    </carbon.widget.LinearLayout>
</carbon.widget.RelativeLayout>